<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white" >
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
<View android:layout_width="fill_parent"
    android:layout_height="0.5dp"
    android:background="@color/color_grayline1dp"/> 
    <RelativeLayout android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp">

         <TextView
             android:id="@+id/tv_name"
             android:layout_width="wrap_content"
             android:layout_height="fill_parent"
             android:layout_centerVertical="true"
             android:layout_alignParentLeft="true"
             android:layout_alignTop="@+id/tv_weight"
             android:gravity="center_vertical"
             android:text="@string/null_info"
             android:textColor="@color/color_333333"
             android:textSize="16dp" />

         <TextView
             android:id="@+id/tv_weight"
             android:layout_width="wrap_content"
             android:layout_height="fill_parent"
             android:layout_toRightOf="@+id/tv_name"
               android:gravity="center_vertical"
             android:text="@string/null_info"
             android:layout_marginLeft="3dp"
             android:textColor="@color/color_aaaaaa"
             android:textSize="12dp" />

    </RelativeLayout>
     <View android:layout_width="fill_parent"
	    android:layout_height="0.5dp"   
	      android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
	    android:background="@color/color_grayline1dp"/>
    <RelativeLayout android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/rl_no_children">
       

	       <TextView
	           android:id="@+id/tv_no_children"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_alignParentLeft="true"
	           android:layout_centerVertical="true"
	           android:text="@string/null_info"
	           android:textColor="@color/color_aaaaaa"
	           android:textSize="14dp" />

    </RelativeLayout>
    
    </LinearLayout>
    <ListView android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/listview"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:divider="@color/color_grayline1dp"
        android:dividerHeight="0.5dp"
        android:background="@color/white">
        
    </ListView>
	<View android:layout_width="fill_parent"
	    android:layout_height="0.5dp"
	    android:background="@color/color_grayline1dp"/> 
</LinearLayout>
