<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_tab_all"
 
    android:orientation="vertical" >
 <LinearLayout android:layout_width="fill_parent"
    android:layout_height="30dp"
    android:id="@+id/ll_buy"  
    android:orientation="horizontal"
     android:gravity="center"
    android:background="@color/color_B3EBE4">
    <TextView android:layout_width="wrap_content"
        android:layout_height="fill_parent" 	
        android:textSize="14sp" 
        android:id="@+id/tv_shownum"
                  android:textColor="@color/color_0b687b"
                        android:gravity="center"
        android:text="展开已购买药品"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/iv_open"
        android:background="@drawable/list_open"
        />

</LinearLayout>  
<!--     <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_greenline2dp" /> -->
<RelativeLayout  
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:id="@+id/rl_tab" 
     android:background="@drawable/btn_bulk_greens" 
    android:layout_below="@id/ll_buy"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingTop="1dp" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="56dp"
            android:background="@color/white"
            android:gravity="center_vertical" >
            <TextView
                android:id="@+id/tv_units"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_nums"
                android:layout_alignBottom="@+id/tv_nums"
                android:layout_alignParentRight="true"
                android:layout_marginRight="14dp"
                android:maxEms="4"
                android:paddingBottom="3dp"
                android:singleLine="true"
                android:text="@string/null_info"
                android:textColor="@color/status_text"
                android:textSize="14dp" />


            <TextView
                android:id="@+id/tv_nums"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dp"
                android:layout_toLeftOf="@id/tv_units"
                android:maxEms="4"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="@string/null_info"
                android:textColor="@color/color_333333"
                android:textSize="26dp" />
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:singleLine="true"
                android:ellipsize="end"
                android:maxEms="14"
                android:layout_toRightOf="@+id/tv_nums"
                android:text="@string/null_info"
                android:textColor="@color/color_333333"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_weight_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_weight"
                android:layout_alignBottom="@+id/tv_weight"
                android:layout_toRightOf="@+id/tv_weight"
                android:layout_marginLeft="4dp"
                android:text="@string/null_info"
                android:ellipsize="end"
                android:singleLine="true"
                android:maxEms="10"
                android:textColor="@color/color_aaaaaa"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tv_name"
                android:maxEms="6"
                android:singleLine="true"
                android:text="@string/null_info"
                android:textColor="@color/color_aaaaaa"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/btn_zeng"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignTop="@+id/tv_name"
                android:layout_toRightOf="@+id/tv_name"
                android:background="@drawable/btn_blue_all_3bc1f3"
                android:text="赠"
                android:visibility="gone"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </RelativeLayout>

        <View
            android:id="@+id/miden_line"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginRight="15dp"
            android:background="@color/color_grayline1dp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_moreorless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:maxEms="5"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="@string/null_info"
                android:textColor="@color/status_text"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/iv_circle"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="6.5dp"
                android:layout_toLeftOf="@+id/tv_moreorless"
                android:background="@drawable/circleblue" />

            <TextView
                android:id="@+id/tv_companyinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_moreorless"
                android:layout_alignBottom="@+id/tv_moreorless"
                android:layout_toRightOf="@+id/imageView1"
                android:layout_toLeftOf="@+id/iv_circle"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:text="@string/null_info"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/color_aaaaaa"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/tv_companyinfo"
                android:background="@drawable/yaofang" />

        </RelativeLayout>

    </LinearLayout>
 
    <View
        android:layout_width="0.5dp"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:background="@color/color_greenline2dp" />

    <View
        android:layout_width="0.5dp"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:background="@color/color_greenline2dp" />  

    <View
        android:id="@+id/view_lastline"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@color/color_greenline2dp"
        android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>