<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gesture_pattern_bg"
    android:orientation="vertical" >

    <include layout="@layout/pattern_title" />

    <TextView
        android:id="@+id/tv_updatelock"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.20"
        android:gravity="center"
        android:text="请输入原手势密码"
        android:textColor="@color/white"
        android:textSize="17sp" />

    <com.dachen.medicine.view.LockPatternView
        android:id="@+id/updatalock_lockview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.20" />

</LinearLayout>