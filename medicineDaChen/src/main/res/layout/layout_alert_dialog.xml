<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_dialog_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/tv_alert_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_title_height"
        android:textColor="@color/lable_color_blue"
        android:textSize="@dimen/text_size_20sp"
        android:gravity="center|center_vertical"/>
    
	<View
	    android:id="@+id/title_divide"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_line_height"
        android:background="@color/divide_line_color" />
    <TextView
        android:id="@+id/tv_alert_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dip"
        android:paddingLeft="@dimen/padding_10dp"
        android:paddingRight="@dimen/padding_10dp"
        android:textColor="@color/lable_color_blue"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="@dimen/text_size_18sp" />
    
    <!-- 分割线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_line_height"
        android:layout_marginTop="@dimen/margin_25dp_50px"
        android:background="@color/divide_line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/translate"
            android:gravity="center_horizontal"
            android:paddingBottom="16dip"
            android:paddingTop="16dip"
            android:text="@string/dialog_confirm"
            android:textColor="@color/blue"
            android:textSize="@dimen/text_size_18sp" />
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/translate"
            android:gravity="center_horizontal"
            android:paddingBottom="16dip"
            android:paddingTop="16dip"
            android:text="@string/dialog_cancel"
            android:textColor="@color/blue"
            android:textSize="@dimen/text_size_18sp" />
    </LinearLayout>

</LinearLayout>