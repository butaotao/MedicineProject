<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
     android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp" >
<LinearLayout  
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"  
      android:background="@drawable/btn_bulk_green">
<RelativeLayout android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
    >
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_666666"
        android:text="@string/null_info"
        android:maxLength="12"
        android:id="@+id/tv_name"
        android:layout_alignParentLeft="true" 
        android:textSize="16sp"/>
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp" 
        android:layout_below="@id/tv_name"
        android:textColor="#ff0000"
        android:id="@+id/tv_store"
        android:layout_alignParentLeft="true"
        android:text="@string/null_info"/>
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_gavenum"
        android:layout_centerVertical="true"
        android:textSize="14sp"
        android:text="@string/null_info"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"/>

    <TextView
        android:id="@+id/tv_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_store"
        android:layout_toRightOf="@+id/tv_name"
        android:maxLength="12"
        android:layout_marginLeft="5dp"
        android:text="@string/null_info"
        android:textColor="@color/color_666666"
        android:textSize="14sp" />

</RelativeLayout>    
    <View android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_greenline2dp"/>
<ListView android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:divider="@color/translate"
   
    android:id="@+id/listview"
    android:scrollbars="none"
    android:dividerHeight="5dp">
    
</ListView>
</LinearLayout>
</LinearLayout>
