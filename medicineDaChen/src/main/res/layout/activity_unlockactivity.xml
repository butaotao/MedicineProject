<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gesture_pattern_bg"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="30.0dp" />

    <LinearLayout
        android:id="@+id/gesturepwd_setting_preview"
        android:layout_width="50.0dp"
        android:layout_height="50.0dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/pattern_unlock_logo" >
        </ImageView>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_check_unlock"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.20"
        android:gravity="center"
        android:text="请使用原手势密码验证"
        android:textColor="@color/white"
        android:textSize="17sp" />

    <com.dachen.medicine.view.LockPatternView
        android:id="@+id/unlock_lockview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_forgetpwd"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.20"
        android:gravity="center"
        android:text="忘记密码" />

</LinearLayout>