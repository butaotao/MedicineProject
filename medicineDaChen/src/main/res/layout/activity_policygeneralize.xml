<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical" >

    <include layout="@layout/titlebar"
        android:id="@+id/include_title_bar"/>

    <ListView
        android:id="@+id/lv_policygenerlize"
        android:layout_width="match_parent"
        android:layout_below="@id/include_title_bar"
        android:layout_marginTop="10dp"
        android:divider="@color/translate"
        android:dividerHeight="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:scrollbars="none"
        android:layout_height="match_parent" >
    </ListView>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:id="@+id/rl_nocotent"
    android:layout_below="@id/include_title_bar">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="120dp"
        android:id="@+id/iv_image"
         android:layout_centerHorizontal="true"
        android:background="@drawable/notpolicy"
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前还没有推广政策"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:id="@+id/tv_des"
        android:layout_below="@+id/iv_image"
        android:textColor="@color/color_aaaaaa"/>
</RelativeLayout>
</RelativeLayout>