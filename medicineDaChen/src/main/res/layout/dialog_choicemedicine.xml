<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   
   
    android:background="@drawable/translate_window"
     >



   <Button android:layout_width="fill_parent"
       android:layout_height="50dp"
       android:background="@color/white"
       android:textColor="@color/color_333333"
       android:layout_alignParentBottom="true"
       android:id="@+id/btn_cancel"
       android:textSize="16sp"
       android:text="以上都不是"/>
    <View android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_grayline1dp"/>
    <ListView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listview"
        android:layout_above="@id/btn_cancel"
        android:background="@color/white"
        android:divider="@color/color_grayline1dp"
        android:dividerHeight="0.5dp"
        android:scrollbars="none">

    </ListView>
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:layout_above="@id/listview"
        android:id="@+id/ll_titledes"
        android:background="@color/white">
        <TextView android:textColor="@color/color_aaaaaa"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:id="@+id/titledes"
            android:text="@string/null_info"/>
    </LinearLayout>
    <View android:layout_width="fill_parent"
        android:layout_height="0.5dp"

        android:background="@color/color_grayline1dp"
        android:layout_below="@id/ll_titledes"/>
   <View android:layout_width="fill_parent"
       android:layout_height="0.5dp"
       
       android:background="@color/color_grayline1dp"
       android:layout_above="@id/btn_cancel"/>
</RelativeLayout>
