<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item_content"
    android:layout_width="match_parent"
    android:layout_height="70dp"
     android:paddingLeft="10dp"
            android:paddingRight="18dp"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/rl_updatepwd_accountsafe"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:background="@color/white" >

        <RelativeLayout
            android:id="@+id/rl_lv_usualmedicien"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:gravity="center" >

            <ImageView
                android:id="@+id/iv_lv_usualmedicien"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:src="@drawable/medicien_unchecked" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_medicien"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_lv_medicienname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="六位地黄丸"
                android:textColor="@color/color_333333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_lv_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="康哲湖南制药有限公司"
                android:textColor="@color/color_aaaaaa"
                android:textSize="14sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_lv_right_arrow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2" >

            <ImageView
                android:id="@+id/iv_lv_right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:src="@drawable/ic_right_arrow" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>