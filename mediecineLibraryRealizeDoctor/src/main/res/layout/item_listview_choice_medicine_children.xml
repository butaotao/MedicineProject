<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
 
    android:background="@color/white">
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="15dp"
        android:visibility="gone"
        android:id="@+id/ll_diviver"
        android:orientation="vertical"
        android:background="@color/auto_tender_item_bg">
        
    </LinearLayout>
<LinearLayout  
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
 
    android:background="@color/white">
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/listview_choice_item_height"
           android:id="@+id/ll_childern"
         android:gravity="center_vertical" >


		<!--android:background="@drawable/btn_bulk_gray2"-->
 	<ImageView
 	    android:layout_width="87dp"
 	    android:layout_height="87dp"
 	    android:layout_alignParentLeft="true"
 	    android:layout_centerVertical="true"
 	    android:layout_marginLeft="17dp"
 	    android:id="@+id/img_listview"

 	    android:src="@drawable/image_nodownload" />
<ImageView
 	    android:layout_width="27dp"
 	    android:layout_height="27dp"
 	    android:layout_alignLeft="@+id/img_listview"
 	    android:layout_alignTop="@+id/img_listview"
 	    android:id="@+id/img_company"
 	    android:background="@drawable/company" />
 	<RelativeLayout
 	    android:layout_width="match_parent"
 	    android:layout_height="match_parent"
 	    android:layout_alignTop="@+id/img_listview"
 	    android:layout_marginLeft="5dp"
 	    android:layout_marginRight="5dp"
 	    android:layout_toRightOf="@id/img_listview"
 	    android:gravity="center_vertical" >
<RelativeLayout
 	    android:layout_width="match_parent"
 	    android:layout_height="wrap_content"  
 	    android:gravity="center_vertical" 
 	     android:id="@+id/rl_medicinename"
 	    >
 	   
 	    <LinearLayout android:layout_width="fill_parent"
 	        android:layout_height="wrap_content"
			android:orientation="horizontal"
 	        android:id="@+id/ll_medicinename">
 	        <TextView android:layout_width="wrap_content"
 	            android:layout_height="wrap_content"
 	            android:text="@string/null_info"
 	            android:textSize="15sp"
				android:maxWidth="@dimen/choicemedicimagenamewidth"
              android:singleLine="true"
			 android:ellipsize="end"
 	            android:id="@+id/tv_medicine_name"
 	            android:textColor="@color/color_333333"
 	            />
 	        <TextView android:layout_width="@dimen/madie_unit_width"
 	            android:layout_height="wrap_content"
 	            android:text="@string/null_info"
				android:layout_marginRight="@dimen/madie_unit_margin_right"
				android:layout_toRightOf="@id/tv_medicine_name"
 	            android:id="@+id/tv_medicine_height"
 	            android:layout_marginLeft="2dp"

 	            android:textSize="12sp"
              android:singleLine="true"
				android:ellipsize="end"
				android:textColor="@color/color_aaaaaa"
 	             />
 	    </LinearLayout>
 	    <TextView android:layout_width="fill_parent"
 	        android:layout_height="wrap_content"
 	        android:layout_below="@+id/ll_medicinename"
 	        android:textColor="@color/color_aaaaaa"
 	        android:id="@+id/tv_company"
 	        android:textSize="14sp"

			android:singleLine="true"
			android:ellipsize="end"
 	        android:layout_marginTop="7dp"
 	        android:text="@string/null_info"/>
	<RelativeLayout
		android:layout_width="20dp"
		android:layout_alignParentRight="true"
		android:id="@+id/rl_pared"
		android:layout_height="30dp">
 	     <ImageView android:layout_width="20dp"
 	        android:layout_height="20dp"
 	        android:id="@+id/iv_image"
 	        android:layout_alignParentRight="true"
 	        android:background="@drawable/no_pared"/>
	</RelativeLayout>
 	          </RelativeLayout>

 	    <RelativeLayout
 	        android:id="@+id/ll_numshow"
 	        android:layout_width="fill_parent"
 	        android:layout_height="wrap_content"
 	        android:layout_alignParentLeft="true"
 	        android:layout_alignParentRight="true"
 	        android:layout_below="@id/rl_medicinename"
 	        android:layout_marginTop="6dp"
 	        android:orientation="vertical" >

 	  
 	         <com.dachen.medicine.view.AddAndSubView 
 	        android:layout_width="110dp"
 	          android:layout_marginTop="6.5dp"
 	        android:layout_alignParentRight="true"
              android:layout_alignParentTop="true"
              android:layout_marginRight="15dp" 
            android:layout_height="50dp" 
            android:id="@+id/subview_add">
        
        </com.dachen.medicine.view.AddAndSubView>
      <LinearLayout android:layout_width="250dp"
              android:layout_height="fill_parent"
              android:id="@+id/ll_numshow_text"
              android:orientation="vertical"
              android:layout_marginRight="10dp" 
              android:layout_toLeftOf="@id/subview_add">
 	            <TextView android:layout_width="wrap_content"
 	                android:layout_height="wrap_content"
 	                android:id="@+id/tv_packages"
 	                   android:textSize="14dp"
 	        		android:maxLines="1"
 	         		android:textColor="@color/color_aaaaaa"
 	                android:layout_marginTop="2dp"
 	                android:text="@string/null_info"/>
 	            
 	        </LinearLayout>
          <RelativeLayout
              android:id="@+id/iv_single"
              android:layout_width="110dp"
              android:layout_height="50dp"
              
              android:layout_alignParentRight="true"
              android:layout_alignParentTop="true"
              android:layout_marginRight="15dp" >

              <ImageView
                  android:id="@+id/iv_add_single"
                  android:layout_width="1dp"
                  android:layout_height="1dp"
                  android:layout_alignParentRight="true"
                  android:layout_centerVertical="true"
                
                  android:background="@drawable/imports" />
          </RelativeLayout>
  
 	    </RelativeLayout>
 	</RelativeLayout>
		<View android:layout_width="fill_parent"
			android:layout_marginLeft="15dp"
			android:layout_marginRight="10dp"
			android:layout_height="0.5dp"
			android:layout_alignParentBottom="true"
			android:background="@color/color_grayline1dp"/>
    </RelativeLayout>

    
    
    
    <LinearLayout  
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:id="@+id/ll_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/listview_item_height"
         android:gravity="center_vertical" 
         android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:id="@+id/tv_name"
            android:textColor="@color/color_333333"
            android:textSize="16sp"
            android:layout_marginLeft="@dimen/listview_item_marginleft"
            android:text="@string/null_info" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/img_arrow" 
            android:src="@drawable/arrow_right" />
    </RelativeLayout>
		<View android:layout_width="fill_parent"
			android:layout_marginLeft="15dp"
			android:layout_marginRight="10dp"
			android:layout_height="0.5dp"
			android:background="@color/color_grayline1dp"/>
</LinearLayout>
    
    
    
    </LinearLayout>
    
</LinearLayout>
