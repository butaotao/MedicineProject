<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background"
              android:orientation="vertical">

    <include layout="@layout/titlebars_patient"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/iv_circle"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:background="@drawable/circle_ff9d6a"/>

        <TextView
            android:id="@+id/tv_howcast_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/iv_circle"
            android:singleLine="true"
            android:text="如何获得积分?"
            android:textColor="@color/color_333333"
            android:textSize="16sp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_howcast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="20dp"
        android:text="您可以通过到我们推荐的药店买药，我们会帮您累积每种药各自所获得的积分值，以便您兑换使用。"
        android:textColor="@color/color_aaaaaa"
        android:textSize="14sp"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_circle2"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:background="@drawable/circle_ff9d6a"/>

        <TextView
            android:id="@+id/tv_howget_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/iv_circle2"
            android:singleLine="true"
            android:text="如何消费积分?"
            android:textColor="@color/color_333333"
            android:textSize="16sp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_howget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="20dp"
        android:text="在购药的过程，您可以告诉店员使用您的积分直接兑换相应的药品。"
        android:textColor="@color/color_aaaaaa"
        android:textSize="14sp"
        android:visibility="gone"/>
</LinearLayout>
