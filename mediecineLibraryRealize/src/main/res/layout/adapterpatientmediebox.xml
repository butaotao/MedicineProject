<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    android:background="@drawable/btn_bulk_gray3"
     >
 <RelativeLayout android:layout_width="fill_parent"
     android:layout_height="52dp"
     android:id="@+id/rl_ercode"
     >




     <ImageView
         android:layout_width="3dp"
         android:layout_height="15dp"
         android:layout_alignParentLeft="true"
         android:layout_centerVertical="true"
         android:background="@color/head_bg_color"
         android:id="@+id/iv_color"
         />
     <ImageView
         android:layout_width="25dp"
         android:layout_height="25dp"
         android:layout_alignParentRight="true"
         android:layout_marginLeft="10dp"
         android:layout_centerVertical="true"
         android:layout_marginRight="8dp"
         android:id="@+id/imge_ercode"
         android:background="@drawable/ercode" />
     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="@string/null_info"
         android:singleLine="true"
         android:ellipsize="end"
         android:layout_marginTop="7dp"
         android:textColor="@color/color_333333"
         android:textSize="16dp"
         android:id="@+id/tv_name"
         android:layout_alignLeft="@+id/tv_time"
         android:layout_alignStart="@+id/tv_time" />


     <TextView
         android:id="@+id/tv_time"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="10dp"
         android:layout_marginTop="3dp"
         android:layout_below="@+id/tv_name"
         android:text="@string/null_info"
         android:textColor="@color/color_aaaaaa"
         android:textSize="12dp" />


 </RelativeLayout>

<View android:layout_width="fill_parent"
    android:layout_height="0.5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="3dp"
    android:background="@color/color_grayline1dp"/>
<RelativeLayout android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:paddingLeft="10dp"
    android:paddingBottom="20dp"
    android:id="@+id/rl_showlist">
    <ImageView android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/midie"
        android:id="@+id/iv_company"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_company"
        android:text="共计"
        android:id="@+id/tv_total_des1" 
        android:textColor="@color/color_666666"
        android:layout_marginLeft="10dp"
        android:textSize="16dp" />
 <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" 
        android:text="@string/null_info"
        android:layout_toRightOf="@id/tv_total_des1"
          android:id="@+id/tv_total_des" 
        android:layout_marginLeft="6dp"
        android:textColor="@color/color_background"
        android:textSize="27dp" />

  <TextView
      android:id="@+id/tv_total_des2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" 
      android:layout_marginLeft="6dp"
      android:layout_centerVertical="true"
      android:layout_toRightOf="@+id/tv_total_des"
      android:text="种药品"
       android:textColor="@color/color_666666"
      android:textSize="16dp" />
<ImageView
    android:layout_width="12dp"
    android:layout_height="20dp"
    android:id="@+id/iv_irr"
    android:layout_alignParentRight="true" 
    android:layout_centerVertical="true"
    android:background="@drawable/irr" />



<ImageView
    android:id="@+id/iv_havebuy"
    android:layout_width="40dp"
    android:layout_height="30dp"
    android:layout_alignTop="@+id/iv_company"
    android:layout_marginLeft="3dp"
    android:layout_toRightOf="@+id/tv_total_des2"
    android:background="@drawable/have_buy" />

</RelativeLayout>
<View android:layout_width="fill_parent"
    android:layout_height="0.5dp"
    android:layout_marginLeft="10dp"
    android:background="@color/color_grayline1dp"/>
<RelativeLayout android:layout_width="fill_parent"
    android:layout_height="45dp"
    android:paddingLeft="10dp"
    android:id="@+id/rl_recomend">
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="推荐药店"
         android:textColor="@color/color_666666"
         android:textSize="15dp"
        android:layout_centerVertical="true"
        />
    <ImageView
    android:layout_width="12dp"
    android:layout_height="20dp" 
    android:layout_alignParentRight="true" 
    android:layout_centerVertical="true"
    android:background="@drawable/irr" />
</RelativeLayout>
<View android:layout_width="fill_parent"
    android:layout_height="0.5dp"
    android:visibility="gone"
    android:layout_marginLeft="10dp"
    android:background="@color/color_grayline1dp"/>

<RelativeLayout android:layout_width="fill_parent"
    android:layout_height="45dp"
    android:paddingLeft="10dp"
    android:visibility="gone"
    android:id="@+id/rl_detail">
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用药建议详情"
        android:textSize="13dp"
        android:id="@+id/tv_advice"
        android:textColor="@color/color_aaaaaa"
        android:layout_centerVertical="true"
        />
    <ImageView
    android:layout_width="12dp"
    android:layout_height="20dp" 
    android:layout_alignParentRight="true" 
    android:layout_centerVertical="true"
    android:background="@drawable/irr" />
</RelativeLayout>
</LinearLayout>
