<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#E9E9E9"
              android:orientation="vertical">

    <include layout="@layout/titlebars_patient"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_grayline1dp"
        />

    <RelativeLayout
        android:id="@+id/rl_choicemedie"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:paddingLeft="18dp"
        android:paddingRight="18dp">

        <TextView
            android:id="@+id/tv_choice_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="选择药品"
            android:textColor="@color/color_aaaaaa"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/rv_arrows"
            android:layout_width="12dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_right"/>

        <TextView
            android:id="@+id/tv_choice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/rv_arrows"
            android:layout_toRightOf="@+id/tv_choice_des"
            android:gravity="right"
            android:singleLine="true"
            android:text="@string/null_info"
            android:textColor="@color/color_333333"
            android:textSize="16sp"/>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_grayline1dp"
        />

    <RelativeLayout
        android:id="@+id/rl_lastnum"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_lastnum_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="当前剩余药量"
            android:textColor="@color/color_aaaaaa"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/rv_arrows2"
            android:layout_width="12dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_right"/>

        <TextView
            android:id="@+id/tv_lastnum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/rv_arrows2"
            android:layout_toRightOf="@+id/tv_lastnum_des"
            android:digits="0123456789."
            android:gravity="right"
            android:singleLine="true"
            android:textColor="@color/color_333333"
            android:textSize="16sp"/>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_grayline1dp"
        />

    <RelativeLayout
        android:id="@+id/rl_everytime_eat"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_everytime_eat_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="每次服用数量"
            android:textColor="@color/color_aaaaaa"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/rv_arrows3"
            android:layout_width="12dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_right"/>

        <TextView
            android:id="@+id/tv_everytime_eat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/rv_arrows3"
            android:layout_toRightOf="@+id/tv_everytime_eat_des"
            android:digits="0123456789."
            android:gravity="right"
            android:singleLine="true"
            android:textColor="@color/color_333333"
            android:textSize="16sp"/>
    </RelativeLayout>

    <View
        android:id="@+id/line4"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_grayline1dp"
        />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_grayline1dp"
        />

    <RelativeLayout
        android:id="@+id/rl_begin_data"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:paddingLeft="18dp"
        android:paddingRight="18dp">

        <TextView
            android:id="@+id/tv_begin_data_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="开始服药日期"
            android:textColor="@color/color_aaaaaa"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/rv_arrows4"
            android:layout_width="12dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_right"/>

        <TextView
            android:id="@+id/tv_begin_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/rv_arrows4"
            android:layout_toRightOf="@+id/tv_begin_data_des"
            android:gravity="right"
            android:singleLine="true"
            android:text="@string/null_info"
            android:textColor="@color/color_333333"
            android:textSize="16sp"/>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_grayline1dp"
        />

    <RelativeLayout
        android:id="@+id/rl_continue_data"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:paddingLeft="18dp"
        android:paddingRight="18dp">

        <TextView
            android:id="@+id/tv_continue_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="服药持续时长"
            android:textColor="@color/color_aaaaaa"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/rv_arrows6"
            android:layout_width="12dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_right"/>

        <TextView
            android:id="@+id/tv_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/rv_arrows6"
            android:layout_toRightOf="@+id/tv_continue_des"
            android:gravity="right"
            android:singleLine="true"
            android:text="@string/null_info"
            android:textColor="@color/color_333333"
            android:textSize="16sp"/>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_grayline1dp"
        />

    <RelativeLayout
        android:id="@+id/rl_interval_data"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:paddingLeft="18dp"
        android:paddingRight="18dp">

        <TextView
            android:id="@+id/tv_interval_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="提醒重复周期"
            android:textColor="@color/color_aaaaaa"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/rv_arrows5"
            android:layout_width="12dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_right"/>

        <TextView
            android:id="@+id/tv_interval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/rv_arrows5"
            android:layout_toRightOf="@+id/tv_interval_des"
            android:gravity="right"
            android:singleLine="true"
            android:text="@string/null_info"
            android:textColor="@color/color_333333"
            android:textSize="16sp"/>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_grayline1dp"
        />



    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_grayline1dp"
        />

    <RelativeLayout
        android:id="@+id/rl_alert_time"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:paddingLeft="18dp"
        android:paddingRight="18dp">

        <TextView
            android:id="@+id/tv_alert_time_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="每日提醒时间"
            android:textColor="@color/color_aaaaaa"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/rv_arrows7"
            android:layout_width="12dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_right"/>

        <TextView
            android:id="@+id/alert_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/rv_arrows7"
            android:layout_toRightOf="@+id/tv_alert_time_des"
            android:gravity="right"
            android:singleLine="true"
            android:text="@string/null_info"
            android:textColor="@color/color_background"
            android:textSize="16sp"/>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_grayline1dp"
        />

    <RelativeLayout
        android:id="@+id/rl_alarm"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:paddingLeft="18dp"
        android:paddingRight="18dp">

        <TextView
            android:id="@+id/tv_alarm_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="提醒铃声"
            android:textColor="@color/color_aaaaaa"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/rv_arrows8"
            android:layout_width="12dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_right"/>

        <TextView
            android:id="@+id/tv_alarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/rv_arrows8"
            android:layout_toRightOf="@+id/tv_alarm_des"
            android:gravity="right"
            android:singleLine="true"
            android:text="系统默认"/>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_grayline1dp"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"

        android:layout_marginTop="12dp"
        android:gravity="bottom"
        android:orientation="vertical">

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_grayline1dp"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_btncontrol"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="12dp"
                android:gravity="bottom"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_delete"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_all_f74e5b"
                    android:gravity="center"
                    android:text="删除提醒"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/btn_stop"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_all_30b2cc"
                    android:gravity="center"
                    android:text="暂停提醒"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
