<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:background="@color/white">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/listview_choice_item_height"
            android:id="@+id/ll_childern"
            android:gravity="center_vertical" >

            <ImageView
                android:layout_width="87dp"
                android:layout_height="87dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:id="@+id/img_listview"
                android:src="@drawable/image_nodownload" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignTop="@+id/img_listview"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/img_listview" >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:id="@+id/rl_medicinename"
                    >

                    <LinearLayout android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:id="@+id/ll_medicinename">
                        <TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/null_info"
                            android:textSize="16dp"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:maxLength="10"
                            android:id="@+id/tv_medicine_name"
                            android:textColor="@color/color_333333"
                            />
                        <TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/null_info"
                            android:id="@+id/tv_medicine_height"
                            android:layout_marginLeft="5dp"
                            android:textSize="13dp"
                            android:singleLine="true"
                            android:maxLength="12"
                            android:textColor="@color/color_aaaaaa"
                            />
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="20dp">
                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_aaaaaa"
                        android:id="@+id/tv_company"
                        android:textSize="14dp"
                        android:maxLines="1"
                        android:maxLength="10"
                        android:text="@string/null_info"/>
                        <TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_333333"
                            android:id="@+id/tv_units"
                            android:textSize="14sp"
                            android:maxLines="1"
                            android:layout_marginRight="10dp"

                            android:text="@string/null_info"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                             />
                        <TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_333333"
                            android:id="@+id/tv_num"
                            android:textSize="22sp"
                            android:maxLines="1"
                            android:layout_marginLeft="5dp"

                            android:layout_toLeftOf="@id/tv_units"
                            android:text="@string/null_info"/>
                    </RelativeLayout>
                </RelativeLayout>


            </RelativeLayout>

        </RelativeLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:orientation="vertical"
        android:background="@color/color_grayline1dp"></LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="@string/null_info"
        android:singleLine="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/tv_mediecinestorename"
        android:layout_marginRight="18dp"
        android:layout_marginLeft="18dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_grayline1dp"></LinearLayout>
    </LinearLayout>
</LinearLayout>
