<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/color_f4f7f7">
<include layout="@layout/titlebars_patient"/>   
<LinearLayout android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="18dp"
    android:layout_marginRight="18dp"

    android:layout_marginTop="10dp">
    <View android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:visibility="gone"
        android:background="@color/color_grayline1dp"/>


</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="horizontal"
            android:background="@color/color_grayline1dp"
            >

        </LinearLayout>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"

            android:textColor="@color/color_aaaaaa"
            android:text="请选择一个药方所属的患者"

            android:textSize="16sp"/>
    <Gallery
        android:id="@+id/myGallery"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:spacing="20px" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/ll_pointhave">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="20dp"
        android:background="@color/color_grayline1dp">

    </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:id="@+id/ll_pointnet">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你有0积分"
            android:id="@+id/tv_havepoints"
            android:textSize="14sp"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="去领"
                    android:id="@+id/tv_net"
                    android:textSize="14sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/color_333333"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:background="@color/color_grayline1dp">

        </LinearLayout>
    </LinearLayout>
    <ListView android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:dividerHeight="15dp"
        android:layout_marginTop="10dp"
    android:divider="@color/translate"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
    android:id="@+id/listview"
    ></ListView>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:id="@+id/ll_nullinfodes">
        <View android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_grayline1dp"/>
        <RelativeLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_marginTop="10dp"
                android:text="查看明细"
                android:visibility="gone"
                android:layout_marginRight="18dp"
                android:layout_alignParentRight="true"
                android:id="@+id/tv_checkdetail"
                android:textColor="@color/color_aaaaaa"
                />
        </RelativeLayout>

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:text="您还未获得积分，快去多攒点分吧！"
            android:id="@+id/tv_show"
            android:layout_marginTop="16dp"
            android:textColor="@color/color_333333"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:textColor="@color/color_aaaaaa"
            android:id="@+id/tv_alert1"
            android:text="温馨提示：您可以通过到推荐药店购买药品，"
            />
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_alert2"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:textColor="@color/color_aaaaaa"
            android:text="来获得该药品的积分以获得赠药。"
            />
        <View android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="15dp"
            android:background="@color/color_grayline1dp"/>
    </LinearLayout>
</LinearLayout>
