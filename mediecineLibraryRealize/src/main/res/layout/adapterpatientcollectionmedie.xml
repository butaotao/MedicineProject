<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@drawable/btn_bulk_gray"
     >
 <RelativeLayout android:layout_width="fill_parent"
     android:layout_height="42dp">

    


 <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_centerVertical="true"
         android:text="@string/null_info"
     android:maxLength="15"
         android:textColor="@color/color_333333"
         android:textSize="16dp"
         android:id="@+id/tv_name" />



   <TextView
      android:id="@+id/tv_time"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBaseline="@+id/tv_name"
      android:layout_alignBottom="@+id/tv_name"
      android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
      android:text="创建新药单"
       android:paddingRight="5dp"
       android:paddingLeft="5dp"
       android:paddingBottom="5dp"
       android:paddingTop="5dp"
       android:background="@drawable/btn_all_30b2cc"
      android:textColor="@color/color_666666"
      android:textSize="12dp" />

     <ImageView android:layout_width="18dp"
         android:layout_height="24dp"
         android:background="@drawable/collections"
         android:layout_centerVertical="true"
         android:layout_toLeftOf="@id/tv_time"></ImageView>
 </RelativeLayout>   
<View android:layout_width="fill_parent"
    android:layout_height="0.5dp"
    android:background="@color/color_grayline1dp"/>
<RelativeLayout android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:id="@+id/rl_showlist">
    <ImageView android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/midie"
        android:id="@+id/iv_company"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_company"
        android:text="共计"
        android:id="@+id/tv_total_des1" 
        android:textColor="@color/color_666666"
        android:layout_marginLeft="10dp"
        android:textSize="16dp" />
 <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" 
        android:text="@string/null_info"
        android:layout_toRightOf="@id/tv_total_des1"
          android:id="@+id/tv_total_des" 
        android:layout_marginLeft="6dp"
        android:textColor="@color/color_background"
        android:textSize="27dp" />

  <TextView
      android:id="@+id/tv_total_des2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" 
      android:layout_marginLeft="6dp"
      android:layout_centerVertical="true"
      android:layout_toRightOf="@+id/tv_total_des"
      android:text="种药品"
       android:textColor="@color/color_666666"
      android:textSize="16dp" />
<ImageView
    android:layout_width="12dp"
    android:layout_height="20dp"
    android:id="@+id/iv_irr"
    android:visibility="gone"
    android:layout_alignParentRight="true" 
    android:layout_centerVertical="true"
    android:background="@drawable/irr" />

<ImageView
    android:layout_width="25dp"
    android:layout_height="25dp"
    android:layout_alignTop="@+id/tv_total_des2"
    android:layout_toLeftOf="@+id/iv_irr"
    android:layout_centerVertical="true"
    android:layout_marginRight="8dp"
    android:visibility="gone"
    android:background="@drawable/ercode" />

<ImageView
    android:id="@+id/iv_havebuy"
    android:layout_width="40dp"
    android:layout_height="30dp"
    android:visibility="gone"
    android:layout_alignTop="@+id/iv_company"
    android:layout_marginLeft="3dp"
    android:layout_toRightOf="@+id/tv_total_des2"
    android:background="@drawable/have_buy" />

</RelativeLayout>
<View android:layout_width="fill_parent"
    android:layout_height="0.5dp"
    android:background="@color/color_grayline1dp"/>
<RelativeLayout android:layout_width="fill_parent"
    android:layout_height="45dp"
    android:visibility="gone"
    android:id="@+id/rl_recomend">
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="推荐药店"
         android:textColor="@color/color_666666"
         android:textSize="15dp"
        android:layout_centerVertical="true"
        />
    <ImageView
    android:layout_width="12dp"
    android:layout_height="20dp" 
    android:layout_alignParentRight="true" 
    android:layout_centerVertical="true"
    android:background="@drawable/irr" />
</RelativeLayout>
<View android:layout_width="fill_parent"
    android:layout_height="0.5dp" 
    android:background="@color/color_grayline1dp"/>

<RelativeLayout android:layout_width="fill_parent"
    android:layout_height="45dp"
    android:id="@+id/rl_detail">
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用药建议详情"
        android:textSize="13dp"
        android:textColor="@color/color_aaaaaa"
        android:layout_centerVertical="true"
        />
    <ImageView
    android:layout_width="12dp"
    android:layout_height="20dp" 
    android:layout_alignParentRight="true" 
    android:layout_centerVertical="true"
    android:background="@drawable/irr" />
</RelativeLayout>
</LinearLayout>
