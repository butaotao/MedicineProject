<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/color_f4f7f7">
   <LinearLayout android:layout_width="wrap_content"
       android:layout_height="40dp" 
       android:id="@+id/ll_time">
       <TextView android:layout_width="wrap_content"
           android:layout_height="fill_parent"
           android:textSize="14sp"
           android:textColor="@color/color_666666"
           android:text="@string/null_info"
           android:gravity="center_vertical"
           android:layout_marginLeft="18dp"
           android:id="@+id/tv_time"
           />
   </LinearLayout>

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="60dp"
              android:background="@color/white" >

        	<View android:layout_width="fill_parent"
        	    android:layout_height="0.5dp"
        	    
        	    android:background="@color/color_grayline1dp"
        	    android:id="@+id/view1"
        	    />
        	<LinearLayout android:layout_width="wrap_content"
        	    android:layout_height="match_parent"
        	    android:id="@+id/rl_btn"
        	    android:gravity="center_vertical"
        	    android:layout_alignParentRight="true"
        	    android:orientation="horizontal">
        	  <TextView android:layout_width="wrap_content"
        	      android:layout_height="wrap_content"
        	       android:textSize="15sp"
        	       android:text="@string/null_info"
        	       android:id="@+id/have_eat"
				  android:layout_marginRight="18dp"
				  android:layout_marginLeft="5dp"
        	       android:textColor="@color/color_bbbbbbb"/>
        	    
        	      <Button android:layout_width="wrap_content"
        	        android:layout_height="28dp" 
        	        android:textSize="15sp"
        	        android:padding="3dp"
        	      android:textColor="@color/color_bbbbbbb"
        	        android:background="@drawable/btn_bulk_gray"
        	     android:text="跳过"  
        	     android:visibility="gone"
        	             android:id="@+id/btn_step"
        	       />
        	      <Button android:layout_width="wrap_content"
        	       android:layout_height="28dp" 
        	      android:text="服用"
        	         android:textSize="15sp"
        	         android:id="@+id/btn_eat"
        	        android:layout_marginLeft="10dp"
        	          android:layout_marginRight="18dp"
        	         android:textColor="@color/white"
        	        android:background="@drawable/btn_all_39cf78"/>
        	</LinearLayout>
        	<RelativeLayout android:layout_width="match_parent"
        	     android:layout_below="@+id/view1"
        	    android:layout_height="match_parent"
        	  android:layout_alignParentLeft="true"
        	    android:layout_toLeftOf="@id/rl_btn">
        	<RelativeLayout android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	   android:layout_centerVertical="true"
        	    android:layout_marginLeft="18dp"
        	    >
				<ImageView
					android:layout_width="@dimen/imagesize"
					android:layout_height="@dimen/imagesize"
					android:id="@+id/iv_eatimg"
					android:layout_marginRight="10dp"
					android:layout_centerVertical="true"
					android:layout_alignParentLeft="true"
					android:layout_alignParentStart="true" />
        	   <TextView android:layout_width="match_parent"
        	       android:layout_height="wrap_content"
				   android:textColor="@color/color_333333"
				   android:singleLine="true" 
				   android:id="@+id/name"
				   android:layout_toRightOf="@+id/iv_eatimg"
				   android:text="@string/null_info"
				   android:ellipsize="end"
        	       android:textSize="16sp"/>
        	     <TextView android:layout_width="wrap_content"
        	       android:layout_height="wrap_content"
				   android:textColor="@color/color_aaaaaa"
				   android:singleLine="true"
					 android:layout_toRightOf="@+id/iv_eatimg"
					 android:ellipsize="end"
				   android:id="@+id/time"
				   
				   android:layout_below="@id/name"
				      android:text="@string/null_info"
        	       android:textSize="14sp"/>

        	</RelativeLayout>
        	
        	</RelativeLayout>
   </RelativeLayout>
       	<View android:layout_width="fill_parent"
        	    android:layout_height="0.5dp"
        	    android:background="@color/color_grayline1dp"
        	    android:id="@+id/view2"
        	    />
       	<RelativeLayout android:layout_width="fill_parent"
       	    android:layout_height="60dp"
       	    android:id="@+id/rl_all" 
       	    android:background="@color/white">
       	    <LinearLayout android:layout_width="wrap_content"
        	    android:layout_height="match_parent"
        	    android:id="@+id/rl_btn_all"
        	    android:gravity="center_vertical"
        	    android:layout_alignParentRight="true"
        	    android:orientation="horizontal">
        	  <TextView android:layout_width="wrap_content"
        	      android:layout_height="wrap_content"
        	       android:textSize="15sp"
        	       android:text="@string/null_info"
        	       android:id="@+id/have_eat_all"
				  android:layout_marginRight="18dp"
        	       android:textColor="@color/color_bbbbbbb"/>
        	    
        	      <Button android:layout_width="wrap_content"
        	      android:layout_height="28dp" 
        	        android:textSize="15sp" 
        	      android:textColor="@color/black" 
        	        android:background="@drawable/btn_bulk_gray"
        	     android:text="全部跳过"  
        	      android:paddingLeft="10dp"
        	      android:visibility="gone"
        	         android:paddingRight="10dp"
        	             android:id="@+id/btn_step_all"
        	       />
        	      <Button android:layout_width="wrap_content"
        	      android:layout_height="28dp" 
        	      android:text="全部服用"
        	         android:textSize="15sp"
        	         android:id="@+id/btn_eat_all" 
        	        android:layout_marginLeft="10dp"
        	          android:layout_marginRight="18dp"
        	         android:textColor="@color/white"
        	        android:background="@drawable/btn_all_39cf78"/>
        	</LinearLayout>
        	<View android:layout_width="fill_parent"
        	    android:layout_height="0.5dp"
        	    android:background="@color/color_grayline1dp"
        	    android:layout_alignParentBottom="true"/>
       	</RelativeLayout>
</LinearLayout>
