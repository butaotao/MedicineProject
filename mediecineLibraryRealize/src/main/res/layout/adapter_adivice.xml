<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bulk_green_rightangle" 
    
    
   >
    <LinearLayout  
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
     android:paddingLeft="15dp"
     android:paddingRight="15dp" >

    <RelativeLayout
        android:id="@+id/rl_meidicineinfo"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:orientation="horizontal">




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ll_num"
            android:gravity="center_vertical"

            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">



        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/iv_exchange"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:background="@drawable/exchange"
            android:layout_toLeftOf="@+id/tv_easy_sell"
            android:layout_toStartOf="@+id/tv_easy_sell" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/tv_easy_sell"
            android:background="@drawable/easy_sell"
            android:layout_marginLeft="2dp"
            android:visibility="gone"
            android:layout_centerVertical="true"  />
            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_unit"
                android:layout_alignBottom="@+id/tv_unit"
                android:layout_toLeftOf="@+id/tv_unit"
                android:text="@string/null_info"
                android:maxLength="5"
                android:singleLine="true"
                android:layout_marginLeft="2dp"
                android:textColor="@color/color_ff8948"
                android:textSize="27dp" />
            <TextView
                android:id="@+id/tv_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignBaseline="@+id/tv_name"
                android:layout_alignBottom="@+id/tv_name"
                android:layout_alignParentRight="true"
                android:text="@string/null_info"
                android:layout_marginLeft="1dp"
                android:maxEms="4"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/color_999999"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_toLeftOf="@id/ll_num"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"
                android:maxWidth="@dimen/advicemedicimagenamewidth"
                android:text="@string/null_info"
                android:layout_centerVertical="true"  />
            <TextView
                android:id="@+id/tv_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/null_info"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginLeft="1dp"
                android:layout_toRightOf="@+id/tv_name"
                android:layout_toEndOf="@+id/tv_name"
                android:textColor="@color/color_aaaaaa"
                android:textSize="12dp"
                android:layout_gravity="center_vertical" />
        </LinearLayout>
    </RelativeLayout>
<View android:layout_width="fill_parent"
    android:layout_height="0.5dp"
    android:background="@color/color_grayline1dp"/>

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="45dp" 
    android:id="@+id/rl_upordown">

    <TextView
        android:id="@+id/tv_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="@string/null_info"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/color_aaaaaa"
        android:textSize="14dp"
        android:layout_toLeftOf="@+id/iv_down"
        android:layout_toStartOf="@+id/iv_down" />

    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignBottom="@+id/tv_company"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:id="@+id/iv_down"
        android:background="@drawable/down" />

</RelativeLayout>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"  
    android:id="@+id/rl_upordown_show"
    android:orientation="vertical"
     >
	
	 <TextView
        android:id="@+id/tv_target_patient_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true" 
        android:text="【用法用量】"
        android:textColor="@color/color_666666"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tv_eat_suggest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"  
        android:layout_below="@id/tv_target_patient_type"
        android:text="@string/null_info"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/color_aaaaaa"
        android:textSize="14dp" />
    
    
    
    
    
     <TextView
         android:layout_below="@id/tv_eat_suggest"
        android:id="@+id/tv_package_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="【包装规格】"
        android:textColor="@color/color_666666"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tv_package"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"  
        android:layout_below="@id/tv_package_des"
        android:text="@string/null_info"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="7dp"
        android:textColor="@color/color_aaaaaa"
        android:textSize="14dp" />
    
    
    
     <TextView
        android:id="@+id/tv_target_patient_get_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_package"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="【获兑0盒药】"
         android:layout_marginTop="10dp"
        android:textColor="@color/color_666666"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tv_target_patient_get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"  
        android:layout_below="@id/tv_target_patient_get_des"
        android:text="@string/null_info"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="7dp"
        android:textColor="@color/color_aaaaaa"
        android:textSize="14dp" />
    
    
 
    
         <TextView
        android:id="@+id/tv_target_patient_sellinfo_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="【促销信息】"
         android:layout_marginTop="10dp"
        android:layout_below="@id/tv_target_patient_get"
        android:textColor="@color/color_666666"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tv_eat_suggest_sellinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"  
        android:layout_below="@id/tv_target_patient_sellinfo_des"
        android:text="@string/null_info"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="7dp"
        android:textColor="@color/color_aaaaaa"
        android:textSize="14dp" />
</LinearLayout>
</LinearLayout>
