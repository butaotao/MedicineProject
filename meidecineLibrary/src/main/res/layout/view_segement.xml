<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/view_segement_tv_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_tab_left"
        android:clickable="true"
        android:gravity="center"
        android:minWidth="100dp"
        android:padding="5dp"
        android:textColor="@drawable/selector_head_text1"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/view_segement_tv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_tab_right"
        android:clickable="true"
        android:gravity="center"
        android:minWidth="100dp"
        android:padding="5dp"
        android:textColor="@drawable/selector_head_text1"
        android:textSize="15sp" />

</LinearLayout>