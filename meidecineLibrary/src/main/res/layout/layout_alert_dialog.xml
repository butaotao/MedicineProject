<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:gravity="center_horizontal"
        android:background="@drawable/ic_dialog_bg"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/tv_alert_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/lable_color_blue"
        android:textSize="20sp"
        android:gravity="center|center_vertical"/>
    
	<View
	    android:id="@+id/title_divide"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/tv_alert_title"
        android:background="@color/divide_line_color" />
    <TextView
        android:id="@+id/tv_alert_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dip"
        android:paddingLeft="10dp"
        android:layout_below="@+id/title_divide"
        android:paddingRight="10dp"
        android:textColor="@color/lable_color_blue"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="18sp" />
    
    <!-- 分割线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/tv_alert_message"
        android:layout_marginTop="50px"
        android:id="@+id/view_line1"
        android:background="@color/divide_line_color" />
    <View
        android:layout_width="1dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/view_line1"
        android:background="@color/divide_line_color" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/view_line1"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginTop="3dp"
            android:layout_height="wrap_content"
            android:background="@color/translate"
            android:gravity="center"
            android:text="@string/dialog_confirm"
            android:textColor="@color/blue"
            android:textSize="18sp" />
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginTop="3dp"
            android:layout_height="wrap_content"
            android:background="@color/translate"
            android:gravity="center"
            android:text="@string/dialog_cancel"
            android:textColor="@color/blue"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>