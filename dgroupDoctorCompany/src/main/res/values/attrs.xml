<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="HListViewStyle" format="reference"/>

    <declare-styleable name="MyHListView">
        <!--item高度-->
        <attr name="Hitem_height" format="dimension"/>
        <!--item宽度-->
        <attr name="Hitem_width" format="dimension"/>
        <!--item获得焦点后缩放因子-->
        <attr name="Hitem_scale_factor" format="float"/>
        <!--缩放动画持续时间-->
        <attr name="Hitem_scale_duration" format="integer"/>
        <!--item之间的间距-->
        <attr name="Hspacing" format="dimension"/>
        <!--控件滚动到最左侧溢出范围-->
        <attr name="Hleft_offset" format="dimension"/>
        <!--控件滚动到最右侧溢出范围-->
        <attr name="Hright_offset" format="dimension"/>
        <!--item相对于HListView的Gravity-->
        <attr name="Hgravity" format="enum">
            <enum name="top" value="0"/>
            <enum name="center" value="1"/>
            <enum name="bottom" value="2"/>
        </attr>
        <attr name="Hbg_color" format="color"/>
    </declare-styleable>
</resources>