<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Width_Height_MAT"
    android:background="@color/bg_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/group_personal_data_top"
        style="@style/ActionBar_Container" >

        <Button
            android:id="@+id/btn_back"
            style="@style/BackStyle"
            android:layout_centerVertical="true"
            android:onClick="onLeftClick" />

        <Button
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/btn_back"
            android:background="@drawable/cancel"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_office_title"
            style="@style/ActionBar_Title"
            android:text="选择联系人" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@color/bg_color" >

        <com.handmark.pulltorefresh.library.PullToRefreshListView
            xmlns:pull="http://schemas.android.com/apk/res-auto"
            android:id="@+id/friendlistview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/bg_color"
            android:cacheColorHint="#00000000"
            android:divider="@android:color/transparent"
            android:dividerHeight="1dip"
            android:fadingEdge="none"
            android:fastScrollEnabled="false"
            android:focusable="false"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="false"
            android:listSelector="#00000000"
            android:scrollbars="none"
            android:smoothScrollbar="true"
            pull:ptrAnimationStyle="flip" />

        <com.dachen.dgroupdoctorcompany.views.SideBar
            android:id="@+id/sideBar"
            android:layout_width="25dp"
            android:layout_height="fill_parent"
            android:layout_gravity="right|center_vertical" />
    </FrameLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#D6D6D6" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="55dip"
        android:background="#F8F8F8"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <com.dachen.dgroupdoctorcompany.views.HorizontalListView
            android:id="@+id/addlistview"
            android:layout_width="0dip"
            android:layout_height="55dip"
            android:layout_marginLeft="10dip"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"
            android:background="@drawable/selector_btn_start"
            android:minWidth="70dip"
            android:paddingBottom="5dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="5dip"
            android:text="开始"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>